#!/bin/ksh
#
# $OpenBSD: nginx.rc,v 1.16 2021/10/31 06:45:40 robert Exp $

daemon="${TRUEPREFIX}/sbin/nginx"

. /etc/rc.d/rc.subr

pexp="nginx: master process ${daemon}${daemon_flags:+ ${daemon_flags}}"

rc_reload() {
	${daemon} ${daemon_flags} -t &&
		pkill -HUP -T "${daemon_rtable}" -xf "${pexp}"
}

rc_cmd $1
